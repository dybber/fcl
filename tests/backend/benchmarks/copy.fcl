sig copy : forall 'a. ['a] -> Program <grid> ['a]<grid>
fun copy arr =
  splitUp 256 arr
   |> mapPull (fn arr => return <block> (push <block> arr))
   |> concat <block> 256


sig example : Program <grid> [int]<grid>
val example = copy (generate (2048 * 2048) (fn i => i))

sig main : Program <grid> unit
val main =
 do <grid>
  { arr <- example
  ; forceAndPrint 100 arr
  ; benchmark 10 (bind <grid> example (force <grid>))
  }
