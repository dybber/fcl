sig scanBlock : [int] -> Program <block> [int]<block>
fun scanBlock arr =
  splitUp 32 arr
   |> mapPull (scanl (fn a => fn b => a + b) 0)
   |> mapPull (return <thread>)
   |> concat 33

sig runtest : Program <grid> [int]<grid>
fun runtest =
  generate 1 (fn i => iota (32*32))
   |> mapPull scanBlock
   |> concat (33*32)

sig main : Program <grid> [int]
fun main =
  do { a <- runtest
     ; forceAndPrint (33*32) a
     }
