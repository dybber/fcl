------------------
-- Copy program --
------------------
sig copy : forall 'a. ['a] -> Program <grid> ['a]<grid>
fun copy arr =
  splitUp 256 arr
   |> mapPull (fn arr => return <block> (push <block> arr))
   |> concat <block> 256

------------------
-- Benchmarking --
------------------
sig main : Program <grid> unit
val main =
 do <grid>
  { input <- generateInput (4096 * 4096)
  ; arr <- copy input
  ; forceAndPrint 100 arr
  ; benchmark 100 (forceM<grid> (copy input))
  }
